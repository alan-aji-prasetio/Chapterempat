        android:layout_height="wrap_content"
        android:id="@+id/Ed_nama"
        android:hint="masukan nama"/>

    <Button
        android:id="@+id/BtnCustomAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>